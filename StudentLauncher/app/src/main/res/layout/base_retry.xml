<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/error_retry_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_update_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nonetwork"/>

    <TextView
        android:id="@+id/tv_update_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_update_search"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/network_anomaly"
        android:textColor="@color/white_68"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btn_update_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_update_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/loading_retry_button"
        android:paddingBottom="@dimen/w10"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/w10"
        android:text="@string/click_retry"
        android:textColor="@color/black"
        android:textSize="16sp"/>
</LinearLayout>