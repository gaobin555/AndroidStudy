<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_large"
    android:paddingRight="@dimen/padding_large">

    <ImageView
        android:id="@+id/item_user_menu_icon_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/icon_card" />

    <TextView
        android:id="@+id/item_user_menu_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:textColor="@color/primary"
        android:textSize="@dimen/font_15"
        test:text="@string/medal_wall" />

    <TextView
        android:id="@+id/item_user_menu_content_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:textColor="@color/second"
        android:textSize="@dimen/font_13"
        test:text="17枚勋章" />

</LinearLayout>