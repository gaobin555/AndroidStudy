<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:test="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:clickable="true"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/title_image"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/reads_title"/>

    <GridView
        android:id="@+id/fragment_discovery_direct_app_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_12"
        android:layout_marginRight="@dimen/margin_12"
        android:layout_marginTop="@dimen/margin_36"
        android:layout_weight="1"
        android:gravity="center"
        android:numColumns="3"
        android:verticalSpacing="@dimen/padding_8"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/no_app"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/no_app_bk"
        >
        <ImageView
            android:id="@+id/no_app_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_58"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src ="@drawable/no_reads_logo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_20"
            android:textStyle="bold"
            android:text="@string/no_reads_1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/font_16"
            android:text="@string/no_reads_2"/>

    </LinearLayout>
</LinearLayout>
