<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pay_item_image_width">

    <ImageView
        android:id="@+id/iv_pay_item_icon"
        android:layout_width="@dimen/pay_item_image_width"
        android:layout_height="@dimen/pay_item_image_width"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_we_chat_pay"/>

    <TextView
        android:id="@+id/tv_pay_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/pay_item_margin"
        android:layout_toEndOf="@id/iv_pay_item_icon"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16"/>

    <ImageView
        android:id="@+id/iv_pay_item_select"
        android:layout_width="@dimen/pay_item_image_width"
        android:layout_height="@dimen/pay_item_image_width"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/checkbox_sel"/>

</RelativeLayout>