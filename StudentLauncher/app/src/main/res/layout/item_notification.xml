<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    test:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.android.xthink.ink.launcherink.common.view.CPYImageView
            android:id="@+id/item_notification_iv"
            android:layout_width="@dimen/margin_58"
            android:layout_height="@dimen/margin_58"
            android:layout_marginLeft="@dimen/padding_small"
            android:layout_marginRight="@dimen/padding_small" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_notification_title_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_17"
                    test:text="啊哈哈哈哈哈" />

                <TextView
                    android:id="@+id/item_notification_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_1"
                    android:gravity="bottom|right"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_13"
                    test:text="下午12:34" />

            </LinearLayout>


            <TextView
                android:id="@+id/item_notification_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/font_13"
                test:text="Where are you going?" />

        </LinearLayout>
    </LinearLayout>

    <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginBottom="@dimen/margin_x_small"-->
        <!--android:layout_marginTop="@dimen/margin_x_small"-->
        <!--android:src="@drawable/bg_wechat_line" />-->

</LinearLayout>